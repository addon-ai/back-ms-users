name: Java CI/CD Pipeline

env:
  JAVA_VERSION: '{{devops.ci.javaVersion}}'
  JAVA_DISTRIBUTION: '{{devops.ci.javaDistribution}}'
  ARTIFACT_NAME: '{{devops.ci.artifactName}}'
  ARTIFACT_RETENTION_DAYS: {{devops.ci.artifactRetentionDays}}
  MAVEN_OPTS: '{{devops.ci.mavenOpts}}'
  COVERAGE_THRESHOLD: '{{devops.ci.coverageThreshold}}'

on:
  push:
    branches: [ "main", "develop", "staging", "hotfix/*" ]
    tags: [ "v*" ]
  pull_request:
    branches: [ "main", "develop", "staging", "test" ]

jobs:
  # ----------------------------------------------------
  # JOB 1: Build, Test & Package
  # ----------------------------------------------------
  build-and-test:
    name: Build & Test
    runs-on: ubuntu-latest
    
    permissions:
      contents: read
      packages: write
    
    steps:
      - name: 1. Checkout repository
        uses: actions/checkout@v4

      - name: 2. Set up Java (JDK ${{ env.JAVA_VERSION }})
        uses: actions/setup-java@v4
        with:
          java-version: ${{ env.JAVA_VERSION }}
          distribution: ${{ env.JAVA_DISTRIBUTION }}

      - name: 3. Cache Maven dependencies
        uses: actions/cache@v4
        with:
          path: ~/.m2/repository
          key: ${{ runner.os }}-maven-${{ hashFiles('**/pom.xml') }}
          restore-keys: |
            ${{ runner.os }}-maven-

      - name: 4. Run unit tests
        run: mvn -B test --file pom.xml
        env:
          MAVEN_OPTS: ${{ env.MAVEN_OPTS }}

      - name: 5. Generate coverage report
        run: mvn -B jacoco:report --file pom.xml
        env:
          MAVEN_OPTS: ${{ env.MAVEN_OPTS }}

      - name: 6. Check code coverage
        run: mvn -B verify -DskipTests -Djacoco.skip=false --file pom.xml
        env:
          MAVEN_OPTS: ${{ env.MAVEN_OPTS }}

      # - name: 6. Run integration tests
      #   run: mvn -B verify -DskipUnitTests=true --file pom.xml
      #   env:
      #     MAVEN_OPTS: ${{ env.MAVEN_OPTS }}

      - name: 7. Build and package
        run: mvn -B package -DskipTests --file pom.xml
        env:
          MAVEN_OPTS: ${{ env.MAVEN_OPTS }}

      - name: 8. Upload JAR artifact
        uses: actions/upload-artifact@v4
        with:
          name: ${{ env.ARTIFACT_NAME }}
          path: target/*.jar
          retention-days: ${{ env.ARTIFACT_RETENTION_DAYS }}

  # ----------------------------------------------------
  # JOB 2: Publish to GitHub Packages
  # ----------------------------------------------------
  publish:
    name: Publish to GitHub Packages
    runs-on: ubuntu-latest
    needs: build-and-test
    if: github.event_name == 'push' && (startsWith(github.ref, 'refs/tags/') || contains(fromJSON('["refs/heads/main", "refs/heads/develop", "refs/heads/staging"]'), github.ref))
    
    permissions:
      contents: read
      packages: write
    
    steps:
      - name: 1. Checkout repository
        uses: actions/checkout@v4

      - name: 2. Set up Java (JDK ${{ env.JAVA_VERSION }})
        uses: actions/setup-java@v4
        with:
          java-version: ${{ env.JAVA_VERSION }}
          distribution: ${{ env.JAVA_DISTRIBUTION }}
          server-id: github
          server-username: GITHUB_ACTOR
          server-password: GITHUB_TOKEN

      - name: 3. Cache Maven dependencies
        uses: actions/cache@v4
        with:
          path: ~/.m2/repository
          key: ${{ runner.os }}-maven-${{ hashFiles('**/pom.xml') }}
          restore-keys: |
            ${{ runner.os }}-maven-

      - name: 4. Build and publish to GitHub Packages
        run: mvn -B deploy -DskipTests --file pom.xml
        env:
          GITHUB_ACTOR: ${{ github.actor }}
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          MAVEN_OPTS: ${{ env.MAVEN_OPTS }}